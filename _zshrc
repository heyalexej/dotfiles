# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
ZSH_THEME="robbyrussell"

# Z
source "$HOME/.dotfiles/z/z.sh"


# Global aliases
alias -g gits='git status'
alias -g migrate='rake db:migrate db:test:prepare'
alias -g be='bundle exec'
alias -g github='git hub'
alias -g tag='ctags -R .'
alias -g mux='tmuxinator'
alias -g tks='tmux kill-session'
alias -g rmswp='find . -name ".*.sw*" | xargs rm -f'
alias -g s3='s3cmd'

#fast system update
alias sysup='time sudo apt-get update && \
	echo $(yes - | head -40 | paste -s -d '' -) && \
	time sudo apt-get dist-upgrade -y && \
	echo $(yes - | head -40 | paste -s -d '' -) && \
	time sudo apt-get autoremove -y && \
	echo $(yes - | head -40 | paste -s -d '' -)'

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git)

source $ZSH/oh-my-zsh.sh
# Disable auto correct
unsetopt correct_all

